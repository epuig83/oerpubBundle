<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="oerpub\oerpubBundle\Entity\Event">

        <field name="title" column="title" type="string" length="255" nullable="true"/>
        <field name="content" column="content" type="text" nullable="true"/>
        <field name="createDatetime" column="createDatetime" type="datetime" nullable="false"/>
        <field name="modifyDatetime" column="modifyDatetime" type="datetime" nullable="false"/>
    </mapped-superclass>

</doctrine-mapping>